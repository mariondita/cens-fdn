{% extends 'layouts/base.njk' %}

{# Intro content #}
{% set introHeading = title %}
{% set introSummary %}
  {{ content | safe }}
{% endset %}

{# Feature card content #}

{% block content %}
  <main id="main-content" tabindex="-1">
    {% include "partials/components/intro.njk" %}
    
    <div class="[ inner-wrapper ] [ sf-flow ]">
      <div class="feature-card">
        <div class="feature-card__image">
          <img src="/images/cosmo-caixa.jpg" alt="Linda Liukas STEAMConf 2017" loading="lazy">
          <p class="feature-card__caption">Fundació Ciència en Societat, Barcelona. ©Fundació Ciència en Societat</p>
        </div>
        <div class="feature-card__content">
          <h2 class="feature-card__title">STEAMConf 2025</h2>
          <p class="feature-card__description">10a conferència Internacional d'aprenentatge, 5,6,7 i 8 de novembre 2025.</p>
        </div>
      </div>
    </div>
  </main>
{% endblock %}
