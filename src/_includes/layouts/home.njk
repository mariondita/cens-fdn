{% extends 'layouts/base.njk' %}

{# Intro content #}
{% set introHeading = title %}
{% set introSummary %}
  {{ content | safe }}
{% endset %}

{# Feature card content #}

{% block content %}
  <main id="main-content" tabindex="-1">
    {% include "partials/components/intro.njk" %}
    
    <div class="[ inner-wrapper ] [ sf-flow ]">
      <div class="feature-card">
        <div class="feature-card__image">
          <img src="/images/team/paca-ciller.jpg" alt="Fundació Ciència en Societat building" loading="lazy">
          <p class="feature-card__caption">Fundació Ciència en Societat, Barcelona. ©Fundació Ciència en Societat</p>
        </div>
        <div class="feature-card__content">
          <h2 class="feature-card__title">Educació Científica</h2>
          <p class="feature-card__description">La Fundació Ciència en Societat promou l'educació científica i tecnològica entre els joves, fomentant la curiositat i l'esperit crític necessaris per a un futur sostenible.</p>
        </div>
      </div>
    </div>
  </main>
{% endblock %}
